// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "show_whitespaces": "selection",
  "hard_tabs": true,
  "git_panel": {
    "tree_view": true,
    "collapse_untracked_diff": true,
  },
  "git": {
    "inline_blame": {
      "show_commit_summary": true,
    },
  },
  "helix_mode": false,
  "agent_servers": {
    "factory-droid": {
      "type": "registry",
    },
    "opencode": {
      "type": "registry",
    },
  },
  "context_servers": {
    "mcp-server-notion": {
      "enabled": true,
      "remote": false,
      "settings": {
        "notion_token": "",
      },
    },
    "mcp-server-github": {
      "enabled": true,
      "remote": false,
      "settings": {
        "github_personal_access_token": "",
      },
    },
    "mcp-server-gitlab": {
      "enabled": true,
      "remote": false,
      "settings": {
        "gitlab_personal_access_token": "",
      },
    },
  },
  "tab_size": 2,
  "agent": {
    "default_model": {
      "provider": "CliProxy",
      "model": "gemini-3-flash-preview",
    },
  },
  "language_models": {
    "openai_compatible": {
      "CliProxy": {
        "api_url": "http://localhost:8317/v1",
        "available_models": [
          {
            "name": "gemini-3-flash-preview",
            "max_tokens": 200000,
            "max_output_tokens": 32000,
            "max_completion_tokens": 200000,
            "capabilities": {
              "tools": true,
              "images": false,
              "parallel_tool_calls": false,
              "prompt_cache_key": false,
              "chat_completions": true,
            },
          },
          {
            "name": "gemini-3-pro-image-preview",
            "max_tokens": 200000,
            "max_output_tokens": 32000,
            "max_completion_tokens": 200000,
            "capabilities": {
              "tools": true,
              "images": false,
              "parallel_tool_calls": false,
              "prompt_cache_key": false,
              "chat_completions": true,
            },
          },
          {
            "name": "gemini-2.5-flash",
            "max_tokens": 200000,
            "max_output_tokens": 32000,
            "max_completion_tokens": 200000,
            "capabilities": {
              "tools": true,
              "images": false,
              "parallel_tool_calls": false,
              "prompt_cache_key": false,
              "chat_completions": true,
            },
          },
        ],
      },
    },
  },
  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte (Blur)",
    "dark": "Catppuccin Mocha (Blur)",
  },
  "project_panel": {
    "hide_hidden": false,
    "hide_root": false,
    "folder_icons": true,
    "scrollbar": {
      "show": "auto",
    },
    "sticky_scroll": true,
    "indent_size": 18.0,
    "entry_spacing": "standard",
    "hide_gitignore": false,
    "default_width": 240.0,
  },
  "tabs": {
    "file_icons": true,
    "git_status": false,
  },
  "tab_bar": {
    "show_nav_history_buttons": false,
    "show": true,
  },
  "title_bar": {
    "show_user_picture": true,
    "show_branch_icon": true,
  },
  "diagnostics": {
    "inline": {
      "enabled": true,
    },
  },
  "inlay_hints": {
    "enabled": false,
  },
  "relative_line_numbers": "disabled",
  "hide_mouse": "on_typing",
  "agent_buffer_font_size": 12.0,
  "buffer_font_weight": 400.0,
  "use_system_path_prompts": true,
  "when_closing_with_no_tabs": "platform_default",
  "confirm_quit": true,
  "icon_theme": "Material Icon Theme",
  "vim_mode": true,
  "terminal": {
    "option_as_meta": true,
    "dock": "right",
    "font_size": 11.5,
  },
  "telemetry": {
    "diagnostics": true,
    "metrics": true,
  },
  "minimap": {
    "show": "never",
  },
  "cursor_blink": true,
  "file_types": {},
  "indent_guides": {
    "enabled": false,
  },
  "soft_wrap": "editor_width",
  "base_keymap": "VSCode",
  "ui_font_size": 13.0,
  "buffer_font_size": 12.0,
  "ui_font_family": "Iosevka",
  "buffer_font_family": "Iosevka Term",
  "auto_install_extensions": {
    // lsp
    "html": true,
    "vue": true,
    "svelte": true,
    "php": true,
    "scss": true,
    "emmet": true,
    "dart": true,
    "blade": true,
    "graphql": true,
    "toml": true,
    // tools
    "dockerfile": true,
    "gitlab-ci-ls": true,
    "biome": true,
    // theme
    "catppuccin-blur": true,
    "material-icon-theme": true,
    // mcp server
    "mcp-server-context7": true,
    "mcp-server-github": true,
    "mcp-server-gitlab": true,
    "mcp-server-sequential-thinking": true,
    "mcp-server-exa-search": true,
    "mcp-server-notion": true,
  },
  "prettier": {
    "allowed": true,
  },
}
